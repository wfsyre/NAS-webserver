<div class="flex items-center justify-center h-full">
  <div class="flex flex-wrap justify-center bg-gray-200 rounded-md">
    <div class="w-full px-4 lg:order-3 lg:text-right lg:self-center">
      <div class="text-center mt-12">
        <p>Welcome</p>
        <% content_tag :h3, "Welcome" + @user.username, class: "text-4xl font-semibold leading-normal mb-2 text-blueGray-700 mb-2"%>
      </div>
      <hr class="mt-6 border-b-1 border-blueGray-300">
      <div class="py-6 px-3 mt-2 sm:mt-0">
        <%= link_to "Log out", new_session_path, method: "delete", class: "bg-pink-500 active:bg-pink-600 uppercase text-white font-bold hover:shadow-md shadow text-xs px-4 py-2 rounded outline-none focus:outline-none sm:mr-2 mb-1 ease-linear transition-all duration-150"%>
      </div>
    </div>
    <div class="w-full lg:w-4/12 px-4 lg:order-1">
      <div class="flex justify-center py-4 lg:pt-4 pt-8">
        <div class="mr-4 p-3 text-center">
          <% content_tag :span, @user.num_folders, class: "text-xl font-bold block uppercase tracking-wide text-blueGray-600"%>
          <span class="text-sm text-blueGray-400">Folders</span>
        </div>
        <div class="mr-4 p-3 text-center">
          <% content_tag :span, @user.photos_uploaded, class: "text-xl font-bold block uppercase tracking-wide text-blueGray-600"%>
          <span class="text-sm text-blueGray-400">Photos Uploaded</span>
        </div>
        <div class="lg:mr-4 p-3 text-center">
          <% content_tag :span, @user.videos_uploaded, class: "text-xl font-bold block uppercase tracking-wide text-blueGray-600"%>
          <span class="text-sm text-blueGray-400">Videos Uploaded</span>
        </div>
      </div>
    </div>
  </div>
</div>
