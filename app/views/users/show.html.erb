<div class="justify-center h-full mt-20">
  <div class="flex-wrap justify-center place-content-evenly">
    <div class="w-full px-4 lg:order-1">
      <div class="bg-gray-200 rounded-md flex justify-center py-4 lg:pt-4 pt-8 top-0 grid grid-cols-4">
        <div class="mr-4 p-3 text-center">
          <%= content_tag :p, @user.username, class: "text-xl font-semibold leading-normal mb-2 text-blueGray-700 mb-2"%>
        </div>
        <div class="mr-4 p-3 text-center">
          <%= content_tag :span, @num_folders, class: "text-xl font-bold block uppercase tracking-wide text-center"%>
          <span class="text-sm text-center">Folders</span>
        </div>
        <div class="mr-4 p-3 text-center">
          <%= content_tag :span, @photos_num, class: "text-xl font-bold block uppercase tracking-wide text-center"%>
          <span class="text-sm text-center">Photos Uploaded</span>
        </div>
        <div class="lg:mr-4 p-3 text-center">
          <%= content_tag :span, @vids_num, class: "text-xl font-bold block uppercase tracking-wide text-center"%>
          <span class="text-sm text-center">Videos Uploaded</span>
        </div>
      </div>
    </div>
    <div class="mt-4 py-6 bg-gray-200 rounded-lg px-3 grid grid-flow-row auto-rows-auto gap-y-0.5 overflow-y-scroll">
      <p>Available Folders</p>
      <% @folders.each do |f| %>
        <div class="px-1 py-1 bg-gray-300">
          <%= content_tag :p, f, class: ""%>
        </div>
      <% end %>
    </div>
  </div>
</div>
