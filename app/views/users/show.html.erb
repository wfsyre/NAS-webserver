<div class="justify-center h-full mt-20">
  <div class="flex-wrap justify-center place-content-evenly">
    <div class="w-full px-4 lg:order-1 object-top">
      <div class="bg-gray-200 rounded-md flex justify-center py-4 lg:pt-4 pt-8 top-0">
        <div class="mr-4 p-3 text-center">
          <%= content_tag :p, @user.username, class: "text-xl font-semibold leading-normal mb-2 text-blueGray-700 mb-2"%>
        </div>
        <div class="mr-4 p-3 text-center">
          <%= content_tag :span, @num_folders, class: "text-xl font-bold block uppercase tracking-wide text-blueGray-600"%>
          <span class="text-sm text-blueGray-400">Folders</span>
        </div>
        <div class="mr-4 p-3 text-center">
          <%= content_tag :span, @photos_num, class: "text-xl font-bold block uppercase tracking-wide text-blueGray-600"%>
          <span class="text-sm text-blueGray-400">Photos Uploaded</span>
        </div>
        <div class="lg:mr-4 p-3 text-center">
          <%= content_tag :span, @vids_num, class: "text-xl font-bold block uppercase tracking-wide text-blueGray-600"%>
          <span class="text-sm text-blueGray-400">Videos Uploaded</span>
        </div>
        <div class="py-1 px-3 mt-2 right-0">
          <%= link_to "Log out", session_path, method: "delete", class: "bg-pink-500 active:bg-pink-600 uppercase text-white font-bold hover:shadow-lg shadow text-xs px-4 py-2 rounded outline-none focus:outline-none sm:mr-2 mb-1 ease-linear transition-all duration-150"%>
        </div>
      </div>
    </div>
    <div class="mt-4 py-6 bg-gray-200 rounded-lg px-3 grid grid-flow-row auto-rows-auto gap-y-0.5">
      <p>Available Folders</p>
      <% @folders.each do |f| %>
        <div class="px-1 py-1 bg-gray-300">
          <%= content_tag :p, f, class: ""%>
        </div>
      <% end %>
    </div>
  </div>
</div>
