<div class="flex content-center items-center justify-center h-full">
  <div class="w-full lg:w-4/12 px-4">
    <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-200 border-0">
      <div class="text-blueGray-400 text-center mb-3 font-bold">
        <div class="rounded-t mb-0 px-6 py-6">
          <h1 class="text-blueGray-500 text-lg font-bold">Create an account</h1>
        </div>
      </div>
      <div class="flex-auto px-4 lg:px-10 py-10 pt-0">
        <%= form_for @new_user do |f|%>
          <div class="relative w-full mb-3">
            <label class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password">Username</label>
            <%= f.text_field :username, :placeholder => "Username", class: "border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150"%>
          </div>
          <div class="relative w-full mb-3">
            <label class="block uppercase text-blueGray-600 text-xs font-bold mb-2" for="grid-password">Password</label>
            <%= f.password_field :password, :placeholder => "Password", class: "border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150"%>
          </div>
          <%= f.submit "Create Account", class: "bg-gray-700 text-white active:bg-gray-200 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full ease-linear transition-all duration-150" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
